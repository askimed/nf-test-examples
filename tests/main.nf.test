nextflow_pipeline {

    name "Test Workflow main.nf"
    script "main.nf"

    test("Should execute complete pipeline using relative paths") {

        when {
            def testbaseDir = baseDir
            def testOutdir = outputDir
            params {
                ref = "$testbaseDir/test_data/transcriptome.fa"
                left = "$testbaseDir/test_data/reads_1.fq.gz"
                right = "$testbaseDir/test_data/reads_2.fq.gz"
                outdir = "$testOutdir"
            }
        }

        then {
            assert workflow.success
        }

    }

}
